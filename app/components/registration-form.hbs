<form {{on "submit" (fn this.handleSubmit)}} aria-labelledby="form-title form-subtitle"
  aria-describedby="form-description" class="registration-form">
  <div class="registration-form__info">
    <h2 id="form-title">Sign up for Cats Weekly</h2>
    <div id="form-subtitle" aria-hidden="true">The world's leading cat newsletter</div>
    <p id="form-description">Just fill in the information below and we'll keep you up to date with all the latest and
      greatest news about
      cats.</p>
  </div>
  <fieldset class="registration-form__fields">
    <legend>
      Personal Information
    </legend>
    <label for="first-name">First Name</label>
    <input id="first-name" placeholder="Henry" />
    <label for="last-name">Last Name</label>
    <input id="last-name" placeholder="Ford" />
    <label for="email-address">Email Address</label>
    <input id="email-address" placeholder="founder@ford.com" />
    <label for="cats-owned">How many cats have you owned?</label>
    <input id="cats-owned" type="number" placeholder="23" />
  </div>
  <div class="registration-form__actions">
    <button type="submit">Sign up</button>
  </div>
</form>